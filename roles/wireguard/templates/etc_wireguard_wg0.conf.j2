[Interface]
Address = {{ wireguard_server_ip }}
PrivateKey = {{ wireguard_server_private_key.content | b64decode }}
ListenPort = 51820

{% for peer in wireguard_peers %}
[Peer]
PublicKey = {{ peer.public_key }}
AllowedIPs = {{ peer.ip_address | ansible.utils.ipaddr('address') }}/{{ wireguard_server_ip | ansible.utils.ipaddr('network') }}
{% endfor %}